## Hilfsfunktionen, um jene Spalten mit metrischen variablen zu bekommen


m.var <- function(df){
  zeilen <- c()        # Initialisierung einer leeren Liste
  for(i in 2:ncol(df)){
    if(is.logical(df[,i])){
      next                         # Springe zur nächsten Iteration
    } else if (is.character(df[,i])){
      next                         # Springe zur nächsten Iteration
    } else {
      zeilen[i] <- i               # Füge den Index der Spalte zu "zeilen" hinzu
    }
  }
  print(zeilen[!is.na(zeilen)])    # Gib eine Liste der Indizes der metrischen Spalten aus
}


## Hilfsfunktion, um jene Spalten mit kategorialen Variablen zu bekommen

k.var <- function(df){
  zeilen <- c()              # Initialisierung einer leeren Liste 
  for(i in 2:ncol(df)){      # Iteration über alle Spalten des Datenrahmens außer der ersten
    if(is.logical(df[,i])){
      zeilen[i] <- i
    } else if (is.character(df[,i])){
      zeilen[i] <- i
    } else {
      zeilen[i] <- NA
    }
  }
  print(zeilen[!is.na(zeilen)])     # Gib eine Liste der Indizes der kategorialen Spalten aus
}
